{
  "allowImportingTsExtensions": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "dotenv"],
    "baseUrl": ".", // Add baseUrl to support paths
    "paths": {
      "*": ["./*"],
      "@/types/*": ["types/*"] // Add a path for the types folder
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts" // Include the types folder
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}